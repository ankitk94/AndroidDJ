<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button 
            android:id="@+id/publicparty"
			android:label="@string/open_party"
            android:text="Host an open party"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onOpenPartyClicked"
			android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1" > 
        
        <Button
		android:label="@string/closed_party"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Host a closed party"
		android:onClick="onClosedPartyClicked"
		android:id="@+id/closed_party_button"
		android:layout_centerInParent="true">
	</Button>
    
</RelativeLayout>

    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1" > 
        
        <Button
		android:label="@string/invitation_party"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Host an invitation party"
		android:onClick="onInvitationPartyClicked"
		android:id="@+id/invitation_party_button"
		android:layout_centerInParent="true">
	</Button>
    
</RelativeLayout>

</LinearLayout>
